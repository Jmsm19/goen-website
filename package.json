{
  "private": true,
  "devDependencies": {
    "concurrently": "^4.1.0"
  },
  "scripts": {
    "setup": "yarn install && yarn front install && yarn back install",
    "start": "yarn back start",
    "front": "cd frontend && yarn",
    "back": "cd backend && yarn",
    "dev": "concurrently --kill-others --raw \"yarn dev:client\" \"yarn dev:server\" \"yarn front styleguide\"",
    "dev:client": "yarn front start",
    "dev:server": "yarn back dev",
    "move:build": "mv ./frontend/build/* ./backend/public/ && rm -rf ./frontend/build",
    "heroku-postbuild": "yarn front build && yarn back clear:public && yarn move:build"
  }
}